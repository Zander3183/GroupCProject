#This is the window for the summary page
<SummaryWindows>:
    name: "Summary"
    GridLayout:
        cols:1
        GridLayout:
            cols:1
            #The following 2 labels are used as titles for the current window
            Widget:
                size_hint: None, None
                height: 20
            Label:
                id: summary_text_id
                text:'Summary Page'
                font_size: 50
                color: 0,1,0,1
            GridLayout:
                cols:1
                Widget:
                    size_hint: None, None
                    height: .5
            GridLayout:
                cols:7
                Widget:
                    size_hint: None, None
                    height: 4
                Label:
                    id: username_label
                    text: "Username:"
                    font_size: 30
                #This creates a textbox that asks for the username
                Label:
                    id: username
                    text: "Alex123"
                    font_size: 20
                Widget:
                    size_hint: None, None
                    height: 4
                #This creates a textbox that asks for which category to display the summary for
                Label:
                    id: category_label
                    text: "Choice:"
                    font_size: 30
                Label:
                    id: category_input
                    font_size: 20
                    hint_text: "category"
                    multiline: False
                Widget:
                    size_hint: None, None
                    height: 4

        Widget:
            size_hint: None, None
            height: 30
        GridLayout:
            cols:5
            Widget:
                size_hint: None, None
                height: 10
            #This creates a button that displays the respective graph when pressed
            Button:
                id: water_graph
                text: 'Water Graph'
                font_size: 30
                on_press:
                    summary_display.text = "You will hit your water goals!!!"
                    category_input.text = "water"
                on_release:
                    app.get_data(username, category_input)
            Widget:
                size_hint: None, None
                height: 10

            #This creates a button that takes the user back to the Dashboard when pressed
            Button:
                id: calorie_graph
                text: 'Calorie Graph'
                font_size: 30
                on_press:
                    summary_display.text = "You will hit your calorie goals!!!"
                    category_input.text = "calories"
                on_release:
                    app.get_data(username, category_input)
            Widget:
                size_hint: None, None
                height: 10
        GridLayout:
            cols:5
            Widget:
                size_hint: None, None
                height: 10
            #This creates a button that displays the respective graph when pressed
            Button:
                id: weight_graph
                text: 'Weight Graph'
                font_size: 30
                on_press:
                    summary_display.text = "You will hit your weight goals!!!"
                    category_input.text = "weight"
                on_release:
                    app.get_data(username, category_input)
            Widget:
                size_hint: None, None
                height: 10

            #This creates a button that takes the user back to the Dashboard when pressed
            Button:
                id: happy_graph
                text: 'Happiness Graph'
                font_size: 30
                on_press:
                    summary_display.text = "You will hit your happiness goals!!!"
                    category_input.text = "happy"
                on_release:
                    app.get_data(username, category_input)
            Widget:
                size_hint: None, None
                height: 10
        GridLayout:
            cols:5
            Widget:
                size_hint: None, None
                height: 10
            #This creates a button that displays the respective graph when pressed
            Button:
                id: calorie_happy_graph
                text: 'Calorie/Happy'
                font_size: 30
                on_press:
                    summary_display.text = "Calories = Happy!!!"
                    category_input.text = " calories"
                on_release:
                    app.get_data(username, category_input)

            Widget:
                size_hint: None, None
                height: 10

            #This creates a button that takes the user back to the Dashboard when pressed
            Button:
                id: calorie_weight_graph
                text: 'Calorie/Weight'
                font_size: 30
                on_press:
                    summary_display.text = "Calorie and Weight Corrolate!!!"
                    category_input.text = "happy"
                on_release:
                    app.get_data(username, category_input)
            Widget:
                size_hint: None, None
                height: 10
        GridLayout:
            cols:5
            Widget:
                size_hint: None, None
                height: 10
            #This creates a button that displays the respective graph when pressed
            Button:
                id: view_profile
                text: 'View Profile'
                font_size: 30
                on_press:
                    app.root.current = "Display"
                    root.manager.transition.direction = "up"
            Widget:
                size_hint: None, None
                height: 10

            #This creates a button that takes the user back to the Dashboard when pressed
            Button:
                id: summary_exit
                text:"Dashboard"
                font_size: 30
                on_release:
                    app.root.current = "Dashboard"
                    root.manager.transition.direction = "right"
                    summary_display.text = "Drop that Pizza and track!!"
            Widget:
                size_hint: None, None
                height: 10                        
        GridLayout:
            cols:1
            #This displays encouraging text
            Label:
                id: summary_display
                text:'Amazing Results!!'
                font_size: 30
                color: 1,50,0,1
