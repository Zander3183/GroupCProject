#This is the window for the weight tracker
<WeightTrackerWindows>:
    name: "Weight Tracker"
    GridLayout:
        cols:1
        height: .9
        GridLayout:
            cols:1
            #The following 2 labels are displayed as titles on the current window
            Label:
                id: weight_title_id
                text:'Team C Group Project'
                font_size: 50
                color: 1,50,0,1
            Label:
                id: weight_sub_title_id
                text:'Weight Tracker Page'
                font_size: 50
                color: 0,1,0,1
            GridLayout:
                cols:1
                Widget:
                    size_hint: None, None
                    height: .5
            GridLayout:
                cols:5
                Widget:
                    size_hint: None, None
                    height: 4
                #This creates a textbox that asks for the username
                TextInput:
                    id: username
                    font_size: 30
                    hint_text: "Username"
                    multiline: False
                    focus: True
                    on_text_validate: weight.focus = True
                Widget:
                    size_hint: None, None
                    height: 4
                #This creates a textbox that asks for weight in lbs
                TextInput:
                    id: weight
                    font_size: 30
                    hint_text: "weight in lbs.."
                    multiline: False
                    focus: True
                    on_text_validate: True
                Widget:
                    size_hint: None, None
                    height: 4
        Widget:
            size_hint: None, None
            height: 10
        GridLayout:
            cols:5
            Widget:
                size_hint: None, None
                height: 10
            #This creates a button that submits the information and empties all textboxes upon press
            Button:
                id: Submit
                text: 'Submit'
                font_size: 30
                on_release:
                    weight_display.text = "Thanks for tracking today!!!"
                    app.send_data_category(username, weight)
                    weight.text = ""
                    username.text = ""
            Widget:
                size_hint: None, None
                height: 10
            #This creates a button that takes the user back to the dashboard upon press
            Button:
                id: weight_exit
                text:"Dashboard"
                font_size: 30
                on_release:
                    app.root.current = "Dashboard"
                    root.manager.transition.direction = "right"
                    weight_display.text = "Tracking is the Key to fitness!!"
            Widget:
                size_hint: None, None
                height: 10
        GridLayout:
            cols:1
            #This displays encouraging words
            Label:
                id: weight_display
                text:'You Got This!!'
                font_size: 50
                color: 1,50,0,1
