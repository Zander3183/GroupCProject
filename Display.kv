#This is the window for the profile creation page
<DisplayWindows>:
    name: "Display"
    GridLayout:
        cols: 1
        spacing: '20dp'
        #This label is displayed as a title on the window
        Label:
            text: "User Profile"
            font_size: 80
            color: 1,50,0,1
        Label:
            id: infos
            text: "Blank Info"
            markup: True
            size_hint_y: None
            height: 20
            font_size: 20
        Button:
            text: "Display Profile"
            font_size: 30
            on_press:
                username1.text = app.get_user_name()
        GridLayout:
            cols: 2
            spacing: '10dp'
            # This creates a textbox that asks for the username
            Label:
                id: username1
                text: "User Name"
                font_size: 30
            # This creates a textbox that asks for the password
            Label:
                id: password_label
                text: "Label"
                font_size: 30
            #This creats a textbox that asks for the name
            Label:
                id: name_label
                text: "Name:"
                font_size: 30
            #This creates a textbox that asks for height in cm
            Label:
                id: height_label
                text: "Height in cm:"
                font_size: 30
            #This creates a textbox that asks for weight
            Label:
                id: initial_weight_label
                hint_text: "Weight:"
                font_size: 30
            #This creates a textbox that asks for age
            Label:
                id: age_label
                hint_text: "Age:"
                font_size: 30
        GridLayout:
            cols:5
            Widget:
                size_hint: None, None
                height: 10
            #This creates a button that submits the user's happy rating and displays encouraging text upon press
            Button:
                id: Summary
                text:'Summary'
                font_size: 35
                on_release:
                    app.root.current = "Summary"
                    root.manager.transition.direction = "down"
            Widget:
                size_hint: None, None
                height: 10
            #This creates a button that takes the user back to the dashboard and displays text upon press
            Button:
                id: Display_Dashboard
                text:"Dashboard"
                font_size: 30
                on_release:
                    app.root.current = "Dashboard"
                    root.manager.transition.direction = "left"
            Widget:
                size_hint: None, None
                height: 10
