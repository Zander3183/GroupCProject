#This is the window for the profile creation page
<DisplayWindows>:
    name: "Display"
    GridLayout:
        cols: 1
        spacing: '20dp'
        #This label is displayed as a title on the window
        Label:
            text: "User Profile"
            font_size: 80
            color: 1,50,0,1
        Label:
            id: info
            text: ''
            markup: True
            size_hint_y: None
            height: 20
            font_size: 20
        GridLayout:
            cols: 2
            spacing: '10dp'
            #This creates a textbox that asks for the username
            # Label:
            #     id: username
            #     text: app.get_user_data()
            #     multiline: False
            #     font_size: 30
            #     focus: True
            #     on_text_validate: password_id.focus = True
            #This creates a textbox that asks for the password
            TextInput:
                id: password_id
                hint_text: "Password:"
                multiline: False
                font_size: 30
                password: True
                focus: True
                on_text_validate: name_id.focus = True
            #This creats a textbox that asks for the name
            TextInput:
                id: name_id
                hint_text: "Name:"
                multiline: False
                font_size: 30
                focus: True
                on_text_validate: height_id.focus = True
            #This creates a textbox that asks for height in cm
            TextInput:
                id: height_id
                hint_text: "Height in cm:"
                multiline: False
                font_size: 30
                focus: True
                on_text_validate: initial_weight_id.focus = True
            #This creates a textbox that asks for weight
            TextInput:
                id: initial_weight_id
                hint_text: "Weight:"
                multiline: False
                font_size: 30
                focus: True
                on_text_validate: age_id.focus = True
            #This creates a textbox that asks for age
            TextInput:
                id: age_id
                hint_text: "Age:"
                multiline: False
                font_size: 30
                focus: True
                on_text_validate:
                    app.valid_entry(username, password_id, name_id, height_id, initial_weight_id, age_id, info)
        GridLayout:
            cols:5
            Widget:
                size_hint: None, None
                height: 10
            #This creates a button that submits the user's happy rating and displays encouraging text upon press
            Button:
                id: Summary
                text:'Summary'
                font_size: 35
                on_release:
                    app.root.current = "Summary"
                    root.manager.transition.direction = "down"
            Widget:
                size_hint: None, None
                height: 10
            #This creates a button that takes the user back to the dashboard and displays text upon press
            Button:
                id: Display_Dashboard
                text:"Dashboard"
                font_size: 30
                on_release:
                    app.root.current = "Dashboard"
                    root.manager.transition.direction = "left"
            Widget:
                size_hint: None, None
                height: 10
